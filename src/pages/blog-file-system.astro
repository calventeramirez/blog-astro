---
import { siteConfig } from "../conf/site-config";
import Layout from "../layouts/Layout.astro";
import BlogPost from "../components/BlogPost.astro";

// const matches = import.meta.glob('./posts/*.{md, mdx}', { eager: true });
// const posts = Object.values(matches);
const posts = await Astro.glob("./posts-old/*.{md,mdx}");
console.log(posts);

---

<Layout title="Blog de Pablo">
  <!-- component -->
  <section class="bg-white dark:bg-gray-900">
    <div class="container px-6 py-10 mx-auto">
      <h1
        class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white"
      >
        {siteConfig.title}
      </h1>

      <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
		{
			posts.map(post => (
				<BlogPost {...post}/>
			))
		}
      </div>
    </div>
  </section>
</Layout>
